    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Auction API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/auction/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                // Container Auction API
                "MONGODB_HOST": "localhost",
                "MONGODB_PORT": "27017",
                "MONGODB_USER": "admin",
                "MONGODB_PASSWORD": "admin",
                "MONGODB_DB": "auctions",
                "AUCTION_INTERVAL": "30s",
                "BATCH_INSERT_INTERVAL": "5s",
                "MAX_BATCH_SIZE": "2",
                "ALLOW_SELF_OUTBID": "true",
                "GIN_MODE": "debug"
            }
        }
    ]
}