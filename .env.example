# =============================================================================
# Bid Batch Configuration
# =============================================================================
# Intervalo para processar lances em lote
BATCH_INSERT_INTERVAL=20s

# Tamanho máximo do lote de lances
MAX_BATCH_SIZE=4

# =============================================================================
# Auction Configuration
# =============================================================================
# Tempo de duração de um leilão após sua criação
# Após esse intervalo, o leilão expira e não aceita mais lances
AUCTION_INTERVAL=20s

# Intervalo para verificar e fechar leilões expirados automaticamente
AUCTION_CLOSE_CHECK_INTERVAL=10s

# =============================================================================
# Bid Configuration
# =============================================================================
# Permite que o mesmo usuário dê lances consecutivos (desde que maiores)
# true = permite, false = bloqueia (padrão: false)
ALLOW_SELF_OUTBID=false

# =============================================================================
# MongoDB Configuration (Aplicação Go)
# =============================================================================
# Opção 1: Usar URL completa (tem PRIORIDADE se definida)
# MONGODB_URL=mongodb://admin:admin@localhost:27017/auctions?authSource=admin

# Opção 2: Usar variáveis individuais (usadas se MONGODB_URL não estiver definida)
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=admin
MONGODB_DB=auctions

# =============================================================================
# MongoDB Container Configuration
# =============================================================================
# Variáveis usadas pelo container MongoDB para criar o usuário root inicial
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin

